<UIView
    backgroundColor="#aaa"
    height="auto + 20"
    width="70%"
    top="10%">
    
    <UIImageView
        backgroundColor="#fff"
        contentMode="scaleAspectFit"
        image="{image}"
        left="10"
        height="width"
        top="parent.height/2-height/2"
        width="max(intrinsicContentSize.width/10, intrinsicContentSize.height/10)"
        
    />
    <UILabel
        font="120% bold"
        left="previous.right + 10"
        numberOfLines="0"
        right="100% - 10"
        text="{text}"
        textColor="#fff"
        top="parent.height/2-height/2"
    />
</UIView>
